@{
    ViewBag.Title = "Home Page";
}

<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        <p class="divHead">Lista de Autores</p>

        <table cellpadding="12" class="table table-bordered table-hover">
            <tr>


                <th><input type="checkbox" ng-model="book.allItemsSelected" ng-change="selectAll()"></th>
                <td>
                    <b>Id</b>
                </td>
                <td>
                    <b>Name</b>
                </td>

            </tr>
            <tr ng-repeat="author in book.authors">
                <td><input type="checkbox" ng-model="author.isChecked" ng-change="selectEntity()"></td>
                <td>
                    {{author.Id}}
                </td>
                <td>
                    {{author.Name}}
                </td>
            </tr>
        </table>

        <div class="form-group" role="form">
            <div class="container">
                <div class="row">
                    <h2>
                        <span id="spn">Add New Books</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Titulo:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputTitle" placeholder="Title" ng-model="Title">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Edicion:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" datepicker-popup="dd/mm/yyyy" id="inputEdition" placeholder="Edition" ng-model="Edition"
                                       is-open="opened"
                                       close-text="Close">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space" value="Submit" ng-click="InsertData()" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Hidden("Id")

</div>